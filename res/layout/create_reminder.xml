<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical" 
  android:layout_gravity="center"
  android:background="@drawable/background"
  >
 <ScrollView
	android:layout_marginBottom="50dip" 
	android:id="@+id/ScrollView01" 
	android:layout_height="wrap_content" 
	android:layout_width="fill_parent">
 <LinearLayout
 android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical" 
  > 
     <TextView android:id="@+id/dateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
     />
     <CheckedTextView 
     	android:text="Subject" 
     	android:id="@+id/subect_view_crt_rmdr" 
     	android:layout_width="wrap_content" 
     	android:layout_height="wrap_content"
     ></CheckedTextView>
     <EditText 
     	android:id="@+id/subject_edit_crt_rmdr"
     	android:text="" 
     	android:layout_width="match_parent" 
     	android:layout_height="wrap_content"
     android:hint="Reminder for.."></EditText>
     
     <TextView 
     	android:text="To" 
     	android:id="@+id/to_view_crt_rmdr" 
     	android:layout_width="wrap_content" 
     	android:layout_height="wrap_content"
     ></TextView>
 <LinearLayout
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:orientation="horizontal" 
	 > 
      <EditText 
     	android:id="@+id/to_edit_crt_rmdr" 
     	android:text="" 
     	android:layout_width="220dp" 
     	android:layout_height="wrap_content" 
     	android:hint="E-mail address"
     	></EditText>
      	<TextView android:id="@+id/or_view_crt_rmdr" 
      	android:layout_width="wrap_content" 
      	android:layout_height="wrap_content" android:paddingLeft="10dp" android:paddingRight="10dp" android:text="or"></TextView>
      	<CheckBox 
      		android:text="Self" 
      		android:id="@+id/slef_crt_rmdr" 
      		android:layout_width="wrap_content" 
      		android:layout_height="wrap_content"
      	android:layout_gravity="right" android:layout_marginRight="1dp"></CheckBox>
 </LinearLayout>    
 <LinearLayout
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:orientation="horizontal" 
	 > 
        <TextView
        	android:id="@+id/textView3" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"
        	android:text="Date:" 
        	android:paddingLeft="5dp"></TextView>
        <TextView 
        	android:id="@+id/timeDisplay" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"
        	android:paddingLeft="120dp" 
        	android:text="Time:" 
        	></TextView>
</LinearLayout>

 <LinearLayout
	 android:layout_width="fill_parent"
	 android:layout_height="fill_parent"
	 android:orientation="horizontal"> 
     <Button 
     	android:id="@+id/pickDate" 
     	android:layout_width="160dp" 
     	android:layout_height="50dp" 
     	android:text="Pick the date" 
	 ></Button>
     <Button 
     	android:id="@+id/pickTime" 
		android:layout_width="160dp" 
     	android:layout_height="50dp" 
     	android:text="Pick the time" 
     ></Button>
</LinearLayout>

 <LinearLayout
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:orientation="horizontal" 
	 > 
 	<CheckedTextView 
 		android:text="Reminder:" 
 		android:id="@+id/checkedTextView1" 
 		android:layout_width="wrap_content" 
 		android:layout_height="wrap_content"
 	></CheckedTextView>
 	 <CheckedTextView 
 		android:text="Repeat:" 
 		android:id="@+id/repeat_view_crt_rmd" 
 		android:layout_width="wrap_content" 
 		android:layout_height="wrap_content" 
 		android:layout_marginLeft="90dp"
 		></CheckedTextView>
</LinearLayout>
 <LinearLayout
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:orientation="horizontal" 
	 > 

 	<Spinner 
	 	android:id="@+id/reminder_selection" 
	 	android:layout_height="wrap_content" 
	 	android:layout_width="160dp"
	 ></Spinner>
 	<Spinner 
	 	android:id="@+id/repeat_selection" 
	 	android:layout_height="wrap_content" 
	 	android:layout_width="160dp"
	 ></Spinner>
</LinearLayout>   
    <TextView 
     	android:text="Notes" 
     	android:id="@+id/desc_view_crt_rmdr" 
     	android:layout_width="wrap_content" 
     	android:layout_height="wrap_content"
     ></TextView>
    <EditText 
    	android:id="@+id/desc_edit_crt_rmdr" 
    	android:text="" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content"
    	android:lines="1" 
    	android:hint="Additional notes."
    	></EditText>
    </LinearLayout>
</ScrollView>    
<RelativeLayout
	android:layout_marginTop="-50dip" 
	android:gravity="bottom" 
	android:layout_height="wrap_content" 
	android:layout_width="fill_parent">
	<LinearLayout
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:orientation="horizontal" 
	 > 
	
    <Button 
    	android:text="Send" 
    	android:id="@+id/send_crt_rmdr_bt" 
    	android:layout_width="160dp" 
    	android:layout_height="50dp"
    	android:paddingLeft="5dp" 
    	></Button>
    <Button 
    	android:text="Cancel" 
    	android:id="@+id/cancel_crt_rmdr_bt" 
    	android:layout_width="160dp" 
    	android:layout_height="50dp"
    	android:paddingLeft="5dp"
    	></Button>
    	</LinearLayout>
</RelativeLayout>
  </LinearLayout>
